<!-- Collection/Browse Books Page -->
<div class="container-custom py-8">

  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">
      {{ collection.title | default: 'All Books' }}
    </h1>

    {% if collection.description %}
      <div class="text-lg text-gray-600 max-w-3xl">
        {{ collection.description }}
      </div>
    {% endif %}

    <!-- Collection Stats -->
    <div class="mt-4 flex items-center space-x-6 text-sm text-gray-600">
      <span>{{ collection.products_count }} books available</span>
      {% if collection.tags.size > 0 %}
        <span>Tags: {{ collection.tags | join: ', ' }}</span>
      {% endif %}
    </div>
  </div>

  <!-- Filters and Sorting -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">

      <!-- Search within collection -->
      <div class="flex-1 max-w-md">
        <form action="{{ collection.url }}" method="get" class="relative">
          <input
            type="search"
            name="q"
            placeholder="Search in {{ collection.title }}..."
            value="{{ search.terms }}"
            class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          >
          <button type="submit" class="absolute left-3 top-2.5 text-gray-400 hover:text-gray-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </form>
      </div>

      <!-- Sort Options -->
      <div class="flex items-center space-x-4">
        <label for="sort-select" class="text-sm font-medium text-gray-700">Sort by:</label>
        <select
          id="sort-select"
          name="sort_by"
          onchange="this.form.submit()"
          class="border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        >
          <option value="manual" {% if sort_by == 'manual' %}selected{% endif %}>Featured</option>
          <option value="title-ascending" {% if sort_by == 'title-ascending' %}selected{% endif %}>Title A-Z</option>
          <option value="title-descending" {% if sort_by == 'title-descending' %}selected{% endif %}>Title Z-A</option>
          <option value="price-ascending" {% if sort_by == 'price-ascending' %}selected{% endif %}>Price Low-High</option>
          <option value="price-descending" {% if sort_by == 'price-descending' %}selected{% endif %}>Price High-Low</option>
          <option value="created-descending" {% if sort_by == 'created-descending' %}selected{% endif %}>Newest</option>
          <option value="created-ascending" {% if sort_by == 'created-ascending' %}selected{% endif %}>Oldest</option>
        </select>
      </div>

      <!-- View Toggle -->
      <div class="flex items-center space-x-2">
        <button
          onclick="setViewMode('grid')"
          class="p-2 rounded-lg {% if view_mode == 'grid' or view_mode == blank %}bg-blue-100 text-blue-600{% else %}text-gray-400 hover:text-gray-600{% endif %}"
          title="Grid View"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
          </svg>
        </button>
        <button
          onclick="setViewMode('list')"
          class="p-2 rounded-lg {% if view_mode == 'list' %}bg-blue-100 text-blue-600{% else %}text-gray-400 hover:text-gray-600{% endif %}"
          title="List View"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Active Filters -->
    {% if current_tags %}
      <div class="mt-4 flex flex-wrap items-center gap-2">
        <span class="text-sm text-gray-600">Filtered by:</span>
        {% for tag in current_tags %}
          <a
            href="{{ collection.url }}/{{ tag | handleize }}"
            class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors"
          >
            {{ tag }}
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </a>
        {% endfor %}
        <a
          href="{{ collection.url }}"
          class="text-sm text-blue-600 hover:text-blue-700 underline"
        >
          Clear all filters
        </a>
      </div>
    {% endif %}
  </div>

  <!-- Products Grid/List -->
  {% if collection.products.size > 0 %}
    {% if view_mode == 'list' %}
      <!-- List View -->
      <div class="space-y-6">
        {% for product in collection.products %}
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
            <div class="flex flex-col md:flex-row">
              <!-- Product Image -->
              <div class="md:w-48 flex-shrink-0">
                <a href="{{ product.url }}" class="block">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 300, height: 400 }}"
                      alt="{{ product.title }}"
                      class="w-full h-48 md:h-full object-cover hover:opacity-90 transition-opacity"
                    >
                  {% else %}
                    <div class="w-full h-48 md:h-full bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center">
                      <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    </div>
                  {% endif %}
                </a>
              </div>

              <!-- Product Info -->
              <div class="flex-1 p-6">
                <div class="flex flex-col md:flex-row md:items-start md:justify-between">
                  <div class="flex-1">
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                      <a href="{{ product.url }}" class="hover:text-blue-600 transition-colors">{{ product.title }}</a>
                    </h3>

                    <!-- Product Tags/Categories -->
                    {% if product.tags %}
                      <div class="flex flex-wrap gap-2 mb-3">
                        {% for tag in product.tags limit: 3 %}
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            {{ tag }}
                          </span>
                        {% endfor %}
                      </div>
                    {% endif %}

                    <!-- Product Description -->
                    <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                      {{ product.description | strip_html | truncate: 200 }}
                    </p>

                    <!-- Product Variants/Options -->
                    {% if product.variants.size > 1 %}
                      <div class="mb-4">
                        <span class="text-sm text-gray-600">Format: </span>
                        <select class="border border-gray-300 rounded px-2 py-1 text-sm">
                          {% for variant in product.variants %}
                            <option value="{{ variant.id }}">{{ variant.title }}</option>
                          {% endfor %}
                        </select>
                      </div>
                    {% endif %}
                  </div>

                  <!-- Price and Actions -->
                  <div class="mt-4 md:mt-0 md:ml-6 text-center md:text-right">
                    <div class="text-2xl font-bold text-gray-900 mb-4">
                      {{ product.price | money }}
                    </div>

                    <div class="space-y-2">
                      <a
                        href="{{ product.url }}"
                        class="inline-block bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                      >
                        View Details
                      </a>

                      {% if product.available %}
                        <button
                          data-product-id="{{ product.id }}"
                          data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                          data-action="add-to-cart"
                          class="inline-block bg-green-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-700 transition-colors w-full md:w-auto"
                        >
                          Add to Cart
                        </button>
                      {% else %}
                        <span class="inline-block bg-gray-300 text-gray-600 px-6 py-2 rounded-lg font-semibold cursor-not-allowed">
                          Out of Stock
                        </span>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <!-- Grid View -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{{ settings.grid_columns }} gap-6">
        {% for product in collection.products %}
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow group">
            <!-- Product Image -->
            <div class="aspect-w-3 aspect-h-4 bg-gray-200 relative overflow-hidden">
              <a href="{{ product.url }}" class="block">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400, height: 500 }}"
                    alt="{{ product.title }}"
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  >
                {% else %}
                  <div class="w-full h-full bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  </div>
                {% endif %}
              </a>

              <!-- Quick Actions Overlay -->
              <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-all duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100">
                <div class="flex space-x-2">
                  <a
                    href="{{ product.url }}"
                    class="bg-white text-gray-900 px-3 py-2 rounded-lg text-sm font-medium hover:bg-gray-100 transition-colors"
                  >
                    View
                  </a>
                  {% if product.available %}
                    <button
                      data-product-id="{{ product.id }}"
                      data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                      data-action="add-to-cart"
                      class="bg-blue-600 text-white px-3 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors"
                    >
                      Add to Cart
                    </button>
                  {% endif %}
                </div>
              </div>
            </div>

            <!-- Product Info -->
            <div class="p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                <a href="{{ product.url }}" class="hover:text-blue-600 transition-colors line-clamp-2">{{ product.title }}</a>
              </h3>

              <!-- Product Tags -->
              {% if product.tags %}
                <div class="flex flex-wrap gap-1 mb-3">
                  {% for tag in product.tags limit: 2 %}
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
                      {{ tag }}
                    </span>
                  {% endfor %}
                </div>
              {% endif %}

              <!-- Product Description -->
              <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                {{ product.description | strip_html | truncate: 100 }}
              </p>

              <!-- Price -->
              <div class="flex items-center justify-between">
                <div class="text-xl font-bold text-gray-900">
                  {{ product.price | money }}
                </div>

                {% unless product.available %}
                  <span class="text-sm text-red-600 font-medium">Out of Stock</span>
                {% endunless %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    <!-- Pagination -->
    {% if paginate.pages > 1 %}
      <div class="mt-12 flex justify-center">
        <nav class="flex items-center space-x-2">
          {% if paginate.previous %}
            <a
              href="{{ paginate.previous.url }}"
              class="px-3 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors"
            >
              Previous
            </a>
          {% endif %}

          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a
                href="{{ part.url }}"
                class="px-3 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors"
              >
                {{ part.title }}
              </a>
            {% else %}
              <span class="px-3 py-2 rounded-lg bg-blue-600 text-white border border-blue-600">
                {{ part.title }}
              </span>
            {% endif %}
          {% endfor %}

          {% if paginate.next %}
            <a
              href="{{ paginate.next.url }}"
              class="px-3 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors"
            >
              Next
            </a>
          {% endif %}
        </nav>
      </div>
    {% endif %}

  {% else %}
    <!-- Empty Collection -->
    <div class="text-center py-16">
      <svg class="w-24 h-24 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
      </svg>
      <h3 class="text-2xl font-semibold text-gray-900 mb-4">No books found</h3>
      <p class="text-lg text-gray-600 mb-8 max-w-md mx-auto">
        We couldn't find any books matching your criteria. Try adjusting your filters or search terms.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="{{ collection.url }}" class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
          Clear Filters
        </a>
        <a href="/collections/all" class="border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors">
          Browse All Books
        </a>
      </div>
    </div>
  {% endif %}
</div>

<script>
// View mode functionality
function setViewMode(mode) {
  // Store preference in localStorage
  localStorage.setItem('viewMode', mode);

  // Update URL parameter
  const url = new URL(window.location);
  url.searchParams.set('view', mode);
  window.location.href = url.toString();
}

// Load saved view mode
document.addEventListener('DOMContentLoaded', function() {
  const savedViewMode = localStorage.getItem('viewMode') || 'grid';
  const urlParams = new URLSearchParams(window.location.search);
  const urlViewMode = urlParams.get('view');

  if (urlViewMode && ['grid', 'list'].includes(urlViewMode)) {
    // Use URL parameter if present
    return;
  }

  // Apply saved preference
  if (savedViewMode === 'list') {
    setViewMode('list');
  }
});
</script>