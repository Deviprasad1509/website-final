<section class="all-products">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <div class="products-grid">
      {% for product in collections.all.products %}
        <div class="product-card">
          <a href="{{ product.url }}">
            {% if product.featured_image %}
              {{ product.featured_image | image_url: width: 300 | image_tag }}
            {% else %}
              <div style="height: 224px; background: #f8f9fa; display: flex; align-items: center; justify-content: center; color: #6c757d;">
                <span>No Image</span>
              </div>
            {% endif %}
            <div class="card-content">
              <h3>{{ product.title }}</h3>
              {% if product.metafields.custom.author %}
                <p class="author">by {{ product.metafields.custom.author }}</p>
              {% endif %}
              <p class="price">{{ product.price | money }}</p>
              <div class="product-actions">
                <form method="post" action="/cart/add" style="display: inline;">
                  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                  <button type="submit" class="btn">Add to Cart</button>
                </form>
                <form method="post" action="/cart/add" style="display: inline; margin-left: 5px;">
                  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                  <input type="hidden" name="return_to" value="/checkout">
                  <button type="submit" class="btn btn-buy-now">Buy Now</button>
                </form>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "All Products Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Ebooks Collection"
    }
  ]
}
{% endschema %}