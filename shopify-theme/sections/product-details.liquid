<section class="product-details">
  <div class="container">
    <div class="product-images">
      {{ product.featured_image | image_url: width: 600 | image_tag }}
    </div>
    <div class="product-info">
      <h1>{{ product.title }}</h1>
      {% if product.metafields.custom.author %}
        <p class="author">By {{ product.metafields.custom.author }}</p>
      {% endif %}
      <div class="price">{{ product.price | money }}</div>
      <div class="description">{{ product.description }}</div>
      <div class="product-actions">
        <form method="post" action="/cart/add" style="display: inline;">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
          <button type="submit" class="btn">Add to Cart</button>
        </form>
        <form method="post" action="/cart/add" style="display: inline; margin-left: 10px;">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
          <input type="hidden" name="return_to" value="/checkout">
          <button type="submit" class="btn btn-buy-now">Buy Now</button>
        </form>
      </div>
      <p class="download-note">Download available after purchase</p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Details",
  "tag": "section"
}
{% endschema %}